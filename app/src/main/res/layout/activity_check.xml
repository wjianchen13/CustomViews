<?xml version="1.0" encoding="utf-8"?>
<com.example.customview.check.CheckLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_check"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ff00ff00"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.example.customview.check.CenterTextView
        android:id="@+id/tv_wheel_gold_1"
        style="@style/dino_wheel_game_gold"
        android:text="10"/>

    <com.example.customview.check.CenterTextView
        android:id="@+id/tv_wheel_gold_2"
        style="@style/dino_wheel_game_gold"
        android:text="60"/>

    <com.example.customview.check.CenterTextView
        android:id="@+id/tv_wheel_gold_3"
        style="@style/dino_wheel_game_gold"
        android:text="100"/>

    <com.example.customview.check.CenterTextView
        android:id="@+id/tv_wheel_gold_4"
        style="@style/dino_wheel_game_gold"
        android:text="2000"/>
    

</com.example.customview.check.CheckLayout>